            .col-sm-6.col-md-4.mb-24
                input(type="text" placeholder="ФД" required ).form-control
                .invalid-feedback Укажите ФД
            .col-sm-6.col-md-4.mb-24
                input(type="text" placeholder="ФПД" required ).form-control
